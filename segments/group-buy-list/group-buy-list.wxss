.group-list .goods-item {
  vertical-align: top;
  width: 50%;
}

.group-list .goods-item .content-wrap {
  padding: 12rpx 0;
}

.group-list.opposite .goods-item .content-wrap {
  padding: 16rpx 16rpx 20rpx;
}

.group-list .goods-item .content-wrap.haveSales {
  height: 230rpx;
}

.group-list .goods-item .content-wrap.noSales {
  height: 204rpx;
}

.group-list .goods-item .content-wrap .title {
  display: flex;
  height: 70rpx;
  font-size: 26rpx;
  color: #333;
  margin-top: 13rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.group-list.opposite .goods-item .content-wrap .title {
  margin-top: 0;
  margin-bottom: 8rpx;
}

.group-list .goods-item .content-wrap .title .type {
  display: inline-block;
  box-sizing: border-box;
  height: 28rpx;
  line-height: 24rpx;
  margin-right: 12rpx;
  font-size: 22rpx;
  color: #c81e27;
  background: #fff;
  border: 1px solid #c81e27;
  border-radius: 2rpx;
}

.group-list .goods-item .content-wrap .title .type > view {
  display: inline-block;
  background: #ff3800;
  height: 25rpx;
  width: 28rpx;
}

.group-list .goods-item .content-wrap .title .type > text {
  display: inline-block;
  height: 100%;
  line-height: 26rpx;
  padding: 0 4rpx;
  vertical-align: top;
}

.group-list .goods-item .content-wrap .title .type > view icon {
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  justify-content: center;
}

.group-list .goods-item .content-wrap .title .type .image-wrap {
  width: 30rpx;
  height: 30rpx;
  background: #ff3600;
}

.group-list .goods-item .content-wrap .title .type .image-wrap image {
  width: 25rpx;
  height: 25rpx;
  background: #fff;
}

.group-list .goods-item .content-wrap .title .name {
  width: calc(100% - 100rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.group-list .goods-item .content-wrap .same-line > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-item .content-wrap .same-line > view .sales-num {
  font-size: 24rpx;
  color: #a1a1a1;
}

.goods-item .content-wrap .same-line > view .count-big-down {
  font-size: 22rpx;
  color: #c81e27;
}

.group-list .goods-item .content-wrap .same-line .first-line {
  margin: 28rpx 0 12rpx;
}

.group-list .goods-item .content-wrap .differ-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 28rpx;
}

.group-list .goods-item .content-wrap .differ-line .first-line {
  width: calc(100% - 150rpx);
}

.group-list .goods-item .content-wrap .differ-line .second-line {
  flex: 1;
  width: 150rpx;
}

.group-list .goods-item .content-wrap .differ-line .sales-num {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #a1a1a1;
}

.group-list.list .goods-item .content-wrap .differ-line {
  display: flex;
}

.group-list .goods-item .content-wrap .price {
  line-height: 40rpx;
}

.group-list .goods-item .content-wrap .min-price {
  font-size: 26rpx;
  color: #c81e27;
  margin-right: 14rpx;
}

.group-list.opposite .goods-item .content-wrap .min-price {
  font-size: 26rpx;
}

.group-list .goods-item .content-wrap .min-price > text {
  font-size: 36rpx;
}

.group-list .goods-item .content-wrap .origin-price {
  font-size: 26rpx;
  color: #a1a1a1;
  text-decoration: line-through;
}

.group-list.opposite .goods-item .content-wrap .origin-price {
  font-size: 24rpx;
}

.group-list .goods-item .content-wrap .status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.group-list .goods-item .content-wrap .sales {
  font-size: 24rpx;
  color: #a1a1a1;
}

.group-list .goods-item .content-wrap .countdown {
  font-size: 22rpx;
  color: #ff3600;
}

.group-list .goods-item .content-wrap .to-join button {
  float: right;
  width: 150rpx;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  padding: 0;
  color: #fff;
  border-radius: 30rpx;
}

.group-list .goods-item .content-wrap .to-join .ready,
.group-list .goods-item .content-wrap .to-join .remain {
  background: #c81e27;
}

.group-list .goods-item .content-wrap .to-join .reminded {
  background: #c81e27;
}

.group-list .goods-item .content-wrap .to-join .go {
  background: #c81e27;
}

.group-list .goods-item .content-wrap .to-join .over {
  background: #d2d2d2;
}

.group-list.opposite .goods-item {
  display: inline-block;
  width: 50%;
}

.group-list.opposite .goods-item {
  width: 369rpx;
}

.group-list .group-list .no-sales {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.group .loading-btn {
  font-size: 26rpx;
}

.group-list.opposite .image-wrap,
.group-list.opposite .image-wrap image {
  position: relative;
  width: 100%;
  height: 100%;
}

.group-list-mode-2 .group-list .count-down {
  padding: 0;
}

.group-list .count-down {
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 50rpx;
  width: 100%;
  font-size: 24rpx;
  color: #fff;
}

.group-list .count-down.going,
.group-list .count-down.going > view:nth-last-child(1) view {
  background: #ff3600;
}

.group-list .count-down.ready,
.group-list .count-down.going > view:nth-last-child(1) view {
  background: #c81e27;
}

.group-list .count-down > view:nth-last-child(1) {
  display: flex;
  margin-left: 10rpx;
}

.group-list .count-down > view:nth-last-child(1) view {
  box-sizing: border-box;
  padding: 0 10rpx;
  text-align: center;
  height: 34rpx;
  border-radius: 4rpx;
}

.group-list .count-down.going > view:nth-last-child(1) view {
  background: #c20d0f;
}

.group-list .count-down.ready > view:nth-last-child(1) view {
  background: #e28502;
}

.group-list .count-down > view:nth-last-child(1) text {
  margin: 0 5rpx;
}

/* 左右 */

.group-list.opposite {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #f3f3f3;
}

/* 横滑 */

.group.group-list-mode-2 .group-list {
  height: auto;
  white-space: nowrap;
  vertical-align: middle;
}

.group-list-mode-2 .group-list .goods-item {
  display: inline-block;
  margin-right: 15rpx;
  vertical-align: top;
  width: 330rpx;
}

.group-list-mode-2 .group-list .goods-item .content-wrap {
  padding: 16rpx 16rpx 20rpx;
}

.group-list-mode-2 .group-list .goods-item .content-wrap .title {
  margin-top: 0;
  margin-bottom: 8rpx;
}

.group-list-mode-2 .group-list .image-wrap {
  position: relative;
  width: 330rpx;
  height: 370rpx;
}
.group-list-mode-2 .group-list .image-wrap image {
  width: 100%;
  height: 100%;
}

.group-list-mode-2 .group-list .goods-item:nth-last-child(1) {
  margin-right: 0;
}
.group-list-mode-2 .group-list .image-wrap image {
  width: 100%;
  height: 100%;
}

/* 列表 */

.group-list.list .goods-item {
  padding: 20rpx;
  width: calc(100vw - 40rpx);
  display: flex;
  align-items: center;
  height: 220rpx;
  border-bottom: 1px solid #f3f3f3;
}

.group-list.list .image-wrap {
  width: 220rpx;
  height: 220rpx;
}

.group-list.list .image-wrap image {
  width: 100%;
  height: 100%;
}

.group-list.list .content-wrap {
  height: 220rpx;
  padding-left: 20rpx;
}

/* 大图 */

.group-list.bigPicture .goods-item {
  margin-bottom: 10rpx;
  width: 100%;
}

.group-list.bigPicture .goods-item .content-wrap {
  background: #fff;
  box-sizing: border-box;
  padding: 16rpx 16rpx 16rpx;
  width: 100%;
}

.group-list.bigPicture .goods-item:nth-last-child(1) {
  margin-bottom: 0;
}

.group-list.bigPicture .goods-item .content-wrap .title {
  margin-top: 0;
  height: auto;
}

.group-list.bigPicture .image-wrap,
.group-list.bigPicture .image-wrap image {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.group-list.bigPicture .sales-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.group-list.bigPicture .count-down {
  width: auto;
}

.group-list.bigPicture .content-wrap .status {
  margin-top: 0;
}