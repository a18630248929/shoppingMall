.classify_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.classify_left {
  width: 27%;
  text-align: center;
  overflow: hidden;
  background-color: #F6F6F6;
  font-size: 30rpx;
  border-left: none;
}

.classify_left view {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}

.classify_right {
  width: 73%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background: #FFFFFF;
}

.classify_right image {
  width: 100%;
}

.classify_right_text {
  width: 100%;
  margin-top: 20rpx;
  background: #FFFFFF;
  padding: 10rpx;
}

.classify_right_text text {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
}

.classify_right_box {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  flex-wrap: wrap;
  font-size: 30rpx;
  text-align: center;
}

.classify_right_box>view {
  width: 50%;
  margin-top: 30rpx;
}

.classify_right_box>view image {
  width: 70%;
}

.active {
  font-weight: bold;
  background-color: #FFFFFF;
  border-left: 3px solid red;
  box-sizing: border-box;
  font-size: 35rpx;
}
