.pltp {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin: 0 10px 10px 0;
}

.dis-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-time {
  float: right;
  color: #999;
  font-size: 28rpx;
}

.comment-1 {
  height: 200rpx;
  padding: 10px;
  margin-bottom: 10rpx;
  background-color: #fff;
  font-size:30rpx;
}

.comment-xx {
  height: 25rpx;
  width: 25rpx;
  padding: 0 5rpx;
}

.flo {
  display: flex;
}

.dis-wrap {
  display: flex;
  flex-direction: flex;
  flex-wrap: wrap;
  width: 100%;
  background-color: #fff;
}

.comment-bq {
  width: 20%;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  margin: 19rpx;
  font-size: 28rpx;
  padding: 10rpx 0;
  border-radius: 10rpx;
}

