}

.dis-wrap {
  display: flex;
  flex-direction: flex;
  flex-wrap: wrap;
  width: 100%;
}

.comment-bq {
  width: 20%;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  margin: 19rpx;
