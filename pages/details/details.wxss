}

.pltp {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin: 0 10px 10px 0;
}

.dis-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-time {
  float: right;
  color: #999;
  font-size: 28rpx;
}

.comment-1 {
  height: 200rpx;
  margin: 20rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
}

.comment-xx {
  height: 25rpx;
  width: 25rpx;
