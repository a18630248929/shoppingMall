page {
  background-color: #f3f0f0;
  box-sizing: border-box;
}

.container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  position: absolute;
  top: 0;
  z-index: 1;
}

.container view {
  width: 30%;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}

.active {
  color: #ff3030;
}

.swiper-box {
  width: 100%;
  padding: 70rpx 15rpx 20rpx 15rpx;
  box-sizing: border-box;
}

.swiper-box swiper-item {
  height: 100%;
}

.hot-box {
  height: 100%;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.mayuse_coupon {
  width: 100%;
  height: 200rpx;
  display: flex;
  background-color: #fff;
  margin-top: 20rpx;
  position: relative;
  overflow: hidden;
  /* border: 1rpx solid red; */
  box-sizing: border-box;
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.mayuse_coupon_a {
  width: 40%;
  color: #fff;
  background-color: #fba0af;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
}

.mayuse_coupon_a text {
  font-size: 60rpx;
}

.mayuse_coupon_b {
  width: 60%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
.xian>view:nth-of-type(1) {
  background: rgba(81, 188, 224, 0.7);
}
.xian .mayuse_coupon_use{
  border:1rpx solid rgb(81, 188, 224);
  color:rgb(81, 188, 224);
}
.mayuse_coupon_b view:nth-of-type(1) {
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 600;
}

.mayuse_coupon_b view:nth-of-type(2) {
  font-size: 25rpx;
}

.mayuse_coupon_use {
  position: absolute;
  right: 12rpx;
  top: 118rpx;
  width: 20%;
  font-size: 28rpx;
  border: 1rpx solid #fba0af;
  color: #fba0af;
  font-weight: bold;
  border-radius: 30rpx;
  text-align: center;
}

.failure_coupon {
  width: 100%;
  height: 200rpx;
  display: flex;
  background-color: #fff;
  color: gray;
  margin-top: 20rpx;
  position: relative;
  overflow: hidden;
  /* border: 1rpx solid red; */
  box-sizing: border-box;
}

.failure_coupon_a {
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
  border: 5rpx solid grey;
}

.failure_coupon_a text {
  font-size: 60rpx;
}

.failure_coupon_b {
  width: 60%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.failure_coupon_b view:nth-of-type(1) {
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}

.failure_coupon_b view:nth-of-type(2) {
  font-size: 25rpx;
}

.shixiao {
  position: absolute;
  right: -95rpx;
  bottom: 20rpx;
  text-align: center;
  width: 40%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  transform: rotate(-45deg);
  color: gray;
  /* border: 1rpx solid gray; */
  /* border-radius: 50%; */
  background: gainsboro;
}
