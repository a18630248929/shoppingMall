.gd_head {
  white-space: nowrap;
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
}

.gd {
  height: 220rpx;
  width: 220rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  box-shadow: 10rpx 10rpx 20rpx #ccc;
}

.dis {
  display: inline-block;
  font-size: 30rpx;
  margin: 0 28rpx;
}

.dis-cou {
  display: flex;
  flex-direction: column;
  width: 25%;
  align-items: center;
  padding: 20rpx 0;
}

.dis-cou image {
  height: 90rpx;
  width: 90rpx;
}

.dis-cou text {
  font-size: 28rpx;
  padding-top: 10rpx;
}

.dis-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
  margin-bottom:6rpx;
}

.sort-line {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
  color: #999;
  background-color: #fff;
  margin: 10rpx 0;
  height: 75rpx;
  align-items: center;
  font-weight: 100;
  width: 25%;
}

.dis-row-1 {
  background-color: #fff;
  width: 720rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
  margin-bottom:10rpx;
}

.new-price {
  color: #c81e27;
}

.old-price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  padding-left: 16rpx;
}

.yg {
  color: #999;
  font-size: 24rpx;
  padding-left: 16rpx;
}

.immediate-purchase {
  background-color: #c81e27;
  color: #fff;
  width: 155rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  font-size: 27rpx;
  float: right;
}

.zh {
  font-size: 24rpx;
}

.red {
  color: #c81e27;
  border-bottom: 2rpx solid #c81e27;
}

.swiper-box scroll-view {
  width: 100%;
  height: 100%;
}

.qb {
  height: 300rpx;
  width: 100%;
}

.dis_cen {
  display: flex;
  justify-content: center;
}

.dis_cen image {
  height: 320rpx;
}

.details-jj {
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  vertical-align: middle;
  margin-bottom:20rpx;
}
.details {
  padding: 20rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.paixu {
  width:100%;
display:flex;

}