/* pages/orderPage/order.wxss */
@import '../coupon/coupon.wxss';

page {
  background-color: #f7f7f7;
}

#order {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx 0;
  font-size: 30rpx;
  background-color: #fff;
}

.order_diz {
  width: 7%;
}

.order_diz image {
  width: 100%;
}

.order_dizi {
  width: 80%;
}

.order_dizi view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order_dizi view text:nth-of-type(1) {
  width: 35%;
}

.order_xq {
  width: 100%;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f7f7f7;
  padding: 15rpx 0;
}

.order_xq>view:nth-of-type(1) {
  width: 15%;
}

.order_xq>view:nth-of-type(1) image {
  width: 100%;
}

.order_xq>view:nth-of-type(2) {
  width: 70%;
}

.orderbox {
  padding: 30rpx 0;
}

.expressFee {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 30rpx;
  border-bottom: 1rpx #f7f7f7 solid;
}

.discount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 30rpx;
  border-bottom: 1rpx #f7f7f7 solid;
}

.leavingMessage {
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1px solid #f7f7f7;
}

.leavingMessage>view:nth-of-type(1) {
  width: 30%;
}

.leavingMessage  input {
  width: 100%;
}

.order_bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  background-color: #fff;
  z-index: 1;
  border-top: 1rpx solid #f7f7f7;
}

.order_bottom>view:nth-of-type(1) {
  width: 70%;
  display: flex;
  justify-content: space-evenly;
}

.order_bottom>view:nth-of-type(1) text {
  color: #c81e27;
}

.order_bottom>view:nth-of-type(2) {
  width: 25%;
  background-color: #c81e27;
  color: #fff;
  text-align: center;
}

.order_xq_box {
  /* padding: 20rpx 15rpx; *//* border-top: 10rpx solid f7f7f7; */
  box-sizing: border-box;
  margin-top: 10rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.n_box {
  padding: 20rpx;
}

.modalFrame {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 98;
}

.modalFrame>view {
  width: 80%;
  background: #fff;
  position: fixed;
  top: 40%;
  z-index: 99;
  left: 10%;
}

.modalFrame_Tips {
  width: 100%;
  text-align: center;
}

.modalFrame_Tips view {
  padding: 20rpx 0;
}

.modalFrame_Tips view:nth-of-type(1) {
  font-weight: bold;
}

.modalFrame_Tips view:nth-of-type(2) {
  font-size: 35rpx;
}

.modalFrame_Choice {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1px solid #f7f7f7;
}

.modalFrame_Choice_height {
  width: 3rpx;
  height: 92rpx;
  background: #f7f7f7;
}

.subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.orderName {
  width: 40%;
  height: 70rpx;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  white-space: pre-wrap;
  margin-left: 90rpx;
}

.orderShop {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #fff;
  height: 65rpx;
  line-height: 65rpx;
  padding-left: 20rpx;
}

.radio-group {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 3px solid #f7f7f7;
  background-color: #fff;
}

.radio-group>view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f7f7f7;
}

.radio-group>view radio {
  transform: scale(0.8);
}

/*radio单选按钮的样式*/

.wx-switch-input {
  width: 42px !important;
  height: 20px !important;
}

/*switch开关的样式*/

.wx-switch-input::before {
  width: 41px !important;
  height: 20px !important;
}

.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}

.shap {
  background-color: #f7f7f7;
  padding: 0 20px;
}

.jiag {
  width: 100%;
  text-align: right;
  margin-top: -28px;
}

.ys {
  background-color: #f7f7f7;
}

.money-goods {
  text-align: right;
  margin-top: -70rpx;
}

.promotion {
  width: 100%;
  height: 1334rpx;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  z-index: 2;
  top: 0;
}

.promotion>view {
  width: 100%;
  height: 800rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  background: #999;
}

.promotionCoupon {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.promotionCoupon image {
  width: 40rpx;
  height: 40rpx;
}

.corponUse {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  background: #fff;
  padding: 30rpx 0;
}

.corponUse view {
  width: 50%;
  text-align: center;
}

.promotionScroll {
  width: 100%;
  height: 610rpx;
  background: #f3f0f0;
  box-sizing: border-box;
  overflow: hidden;
}

.promotionScroll .mayuse_coupon {
  box-shadow: 5rpx 5rpx 30rpx #999 !important;
  position: relative;
}

.promotionScroll .failure_coupon, .mayuse_coupon {
  width: 98% !important;
}

.promotionScroll_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

/* .promotionScroll_view.failure{
  background-color: #f3f0f0;
} */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.corponUse .active {
  color: #c81e27;
}

.coupon_radio {
  position: absolute;
  transform: scale(0.8);
  right: 10rpx;
  bottom: 25rpx;
}
