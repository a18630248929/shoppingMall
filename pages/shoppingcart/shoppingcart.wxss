page {
  background-color: #f9fafe;
  height: 100%;
  font-family: -apple-system-font, Arial, Helvetica, sans-serif;
  color: #333;
  font-size: 32rpx;
  line-height: 1.42857;
}

.container {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.section {
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}

