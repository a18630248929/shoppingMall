/* 第一个盒子 */

.good .good_title {
  float: left;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}

.good .good_title view:first-of-type {
  float: left;
}

.good .good_title view:last-of-type {
  float: right;
}

.good .good_spec {
  font-size: 25rpx;
  color: gray;
}

/* 第二个盒子 */

.good .good_content {
  box-sizing: border-box;
  float: left;
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.good_content .good:last-child {
  border-bottom: none;
}

.good_content .good_checkbox {
  float: left;
  width: 70rpx;
  height: 224rpx;
  line-height: 246rpx;
  padding-left: 10rpx;
}

.good_content .checkbox {
  float: left;
  width: 48rpx;
  height: 48rpx;
}

.good_content .good_img {
  float: left;
  margin-top: 16rpx;
  width: 200rpx;
  height: 200rpx;
}

.good_content .good_img image {
  width: 90%;
  height: 100%;
  justify-content: space-evenly;
}

.good_content .content .titles {
  float: left;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 26rpx;
  width: 369rpx;
  height: 36rpx;
  color: #000;
  white-space: nowrap;
}

.good_content .good_footer {
  margin-top: 30rpx;
  margin-left: 74rpx;
}

.good_content .content .price {
  font-size: 36rpx;
  color: #e4452a;
  margin-top: 10rpx;
}

.good_content .good .stepper {
  float: left;
  margin-top: 15rpx;
  margin-left: 60rpx;
  width: 162rpx;
  height: 50rpx;
}

.good_content .good_footer .price {
  float: left;
  width: 44%;
  height: 50rpx;
  margin-top: 15rpx;
  color: #c81e27;
  font-size: 30rpx;
}

.good_content .good_footer .stepper {
  padding-top: 8rpx;
}

.good_content .stepper .add, .stepper .subtract {
  float: left;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.good_content .stepper .disabled {
  float: left;
  color: #eee;
}

.good_content .stepper .count {
  float: left;
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  /* border: 1px solid #ccc; */
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  text-align: center;
  box-sizing: border-box;
  min-height: 1rem;
  font-size: 28rpx;
}

.content {
  padding-top: 30rpx;
}

/*******底部******************************************** */

.section-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  margin-bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 99;
}

.section-bottom .btn {
  width: 160rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fdfffd;
  background-color: #fbb304;
}

.section-bottom .btn-default {
  color: #fff;
  background-color: #e83632;
}

.section-bottom .btn-primary {
  color: #fdfffd;
  background-color: #e83632;
}

.section-bottom .checkbox-allcheck {
  display: inline-block;
  margin-left: 30rpx;
  vertical-align: top;
  font-size: 0px;
}

.section-bottom .check-all-text {
  display: inline-block;
  vertical-align: top;
  margin-left: 10rpx;
  height: 23px;
  line-height: 23px;
  font-size: 28rpx;
}

.section-bottom .total {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
}

.total .totalCount {
  font-size: 26rpx;
  display: inline-block;
  vertical-align: middle;
}

.total .totalPrice {
  display: inline-block;
  font-size: 26rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}

.total .totalCount text {
  color: #e4452a;
  vertical-align: middle;
}

.total .totalPrice text {
  color: #e4452a;
  font-size: 36rpx;
  vertical-align: middle;
}

/* 空购物车 */

.cartList {
  padding: 100px 0 0 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.cartList image {
  width: 66px;
  height: 66px;
  margin-bottom: 20px;
}

.shanchu {
  height: 45rpx;
  width: 45rpx;
  margin-left: 40rpx;
}
.good_shop{
  width: 100%;
  font-weight: bold;
  font-size:30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}