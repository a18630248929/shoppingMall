  width: 90%;
  background-color: #c81e27;
  color: #fff;
  margin-top:100rpx; 
}
.sign_in>view {
  width: 90%;
  border-bottom: 1rpx solid gainsboro;
  box-sizing: border-box;
  padding: 20rpx 0;
  display: flex;
  align-items:flex-end;
  margin-top:50rpx; 
}
.sign_in>view image{
  width:6%; 
}
