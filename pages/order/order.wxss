/*切换栏*/
.swiper-tab {
  height: 60rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  font-size: 25rpx;
  background-color: #fff;
  align-items: center;
}

.on {
  border-bottom: 2px solid #c81e27;
  color: #c81e27;
}

.hot-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.hot-box_box {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 8rpx solid #f8f7fd;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.hot_box_view_a {
  display: flex;
  justify-content: space-evenly;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #f8f8f8;
  margin-bottom:10rpx;
}

.hot_box_view_a view:nth-of-type(1) {
  width: 20%;
  text-align: center;
}

.hot_box_view_a view:nth-of-type(1) image {
  width: 100%;
}

.hot_box_view_a view:nth-of-type(2) {
  width: 50%;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
}

.hot_box_view_a view:nth-of-type(3) {
  width: 20%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}
.hot_box_view_b {
  width: 100%;
  text-align: right;
  font-size: 30rpx;
  padding: 0 20rpx;
  box-sizing:border-box;
}

.hot_box_view_b>view {
  width: 100%;
  margin-top: 20rpx;
}

.hot_box_view_b>view text {
  width: 23%;
  display: inline-block;
  padding: 5rpx 0;
  text-align: center;
  border: 1rpx #000 solid;
  border-radius: 30rpx;
}

.hot_box_view_b>view text:nth-of-type(1) {
  margin-right: 20rpx;
}

.hot_box_view_b .rcvandnotcmt{
  border: 1rpx #c81e27 solid !important;
  color: #c81e27;
}

.hot_box_view_b .refund{
  border: 1rpx #c81e27 solid !important;
  color: #c81e27;
}

.hot_box_view_b .payment{
  border: 1rpx #c81e27 solid !important;
  color: #c81e27;
}
