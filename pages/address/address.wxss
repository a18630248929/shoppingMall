page{
  display: block;  
  min-height: 100%;  
  background-color:#f6f6f6;  
  font-family: "微软雅黑";
  font-size: 30rpx;
  color:#353535;
}
.item{
  background-color:#fff;
  display:flex;
  padding:20rpx;
  margin-bottom:20rpx;
  flex-direction:column;
}
.info{
  font-size:27rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:85%;
}
.item image{
  width:40rpx;
  height: 40rpx;
  padding-right:10rpx;
}
.add{
  width:100%;
  background-color:#c81e27;
  position:fixed;
  bottom:0;
  height:100rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  color:#fff;
  font-weight:bold;
}
.add image{
  width:50rpx;
  margin-top:15rpx;
  margin-right:20rpx;
}
.add .right{
  width:25rpx;
  float:right;
  margin-right:60rpx;
  padding-top:15rpx;
  color:#e0e0e0;
}
.left{
  float:left;
}
.alinea {
  display:flex;
  /* justify-content:space-between; */
  border-top:1rpx solid #ccc;
  align-items:center;
  justify-content:space-between;
}
.aline {
  display:flex;
  align-items:center;
}
.moren {
  font-size: 30rpx;
}
.modify{
  display: flex;
}
.morenbox{ 
  display: flex;
  align-items: center;
}