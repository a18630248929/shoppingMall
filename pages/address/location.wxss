page {  
  display: block;  
  min-height: 100%;  
  background-color:#f6f6f6;
  font-family: "微软雅黑";
  font-size: 30rpx;
  color:#353535;
  position: relative;
} 
.info{
  background-color: #fff;
}
.item{
  height:90rpx;
  align-items: center;
  display:flex;
  margin-left:30rpx;
  border-bottom:1rpx solid #eee;
}

input placeholder{
  color:red;
}
.area{
  width:150rpx;
  border:1rpx solid #939393;
}
.remind{
  padding-top: 6rpx;
  color:#c81e27;
  font-size:20rpx;
}
.save{
  width:92%;
  margin-top:30rpx;
  background-color: #c81e27;
  color:#fff;
}
.right{
  padding-left: 30rpx;
  width:75%;
  display:flex;
}
input{
  width:100%;
}
.wrapper{
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
}
.wrapper text{
  display: inline-block;
  border: 1px red solid;
  text-align: center;
  width: 20%;
  height:50rpx;
  line-height:50rpx;
  margin: 10rpx;
}
.address_bottom{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index:1;
  background-color:rgba(0, 0, 0,0.5);
}
.address_bottom .address_scroll{
  width: 100%;
  height: 50%;
  background-color: #fff;
  position: fixed;
  bottom:0;
  z-index: 2;
  box-sizing: border-box;
}
.address_scroll>view:nth-of-type(1){
  width: 100%;
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:20rpx;
  border-bottom: 2rpx solid gainsboro;
  box-sizing: border-box;
}
.address_scroll>view:nth-of-type(2){
  width: 100%;
  padding:10rpx;
  border-bottom: 1rpx solid gainsboro;
  box-sizing:border-box;
}
.scoll_view{
  width: 100%;
  height: 77%;
  /* border: 1rpx red solid; */
  box-sizing: border-box;
}
.scoll_view_a{
  width: 100%;
  padding:10rpx 20rpx;
  box-sizing: border-box;
}