}

.preview-quantity-section {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.preview-goods-price {
  display: inline-block;
  margin-left: 12rpx;
  vertical-align: middle;
  line-height: 38rpx;
  font-size: 24rpx;
  color: #c81e27;
  margin-top: -3rpx;
}

.preview-init-price {
  display: inline-block;
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
