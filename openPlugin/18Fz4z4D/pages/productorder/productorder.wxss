}

.buy-goods-count {
  display: inline-block;
  width: 25px;
  height: 22px;
  line-height: 22px;
  margin: 0;
  box-sizing: content-box;
  font-size: 33rpx;
  text-align: center;
  vertical-align: middle;
  border: none;
}

.quantity {
  position: absolute;
  right: 0;
}

.quantity .minus, .quantity .plus {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: normal;
  background-color: #c81e27;
  border-color: #c81e27;
  border-radius: 50%;
}

.quantity .minus {
  background-color: #fff;
  border-color: #9b9b9b;
}

.quantity .plus::before, .quantity .minus::before {
  width: 26rpx;
  height: 5rpx;
}

.quantity .plus::after {
  width: 5rpx;
  height: 26rpx;
}

.quantity .plus::after, .quantity .plus::before {
  background-color: #fff;
}

.quantity .minus::before, .quantity .minus.disabled::before {
  background-color: #9b9b9b;
}

.quantity input.buy-goods-count {
  margin: 0 2px;
  width: 35px;
  background-color: #f5f5f5;
  border-radius: 2px;
}

.quantity .response-area {
  top: 0;
  left: -3px;
  width: 60rpx;
  height: 60rpx;
}

.quantity .response-area-plus {
  left: auto;
  right: -3px;
}

.select-discount-title {
  font-size: 29rpx;
  line-height: 24px;
  color: #818181;
}

.bottom-nav {
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1px solid #eee;
  font-size: 0;
  background-color: #fff;
}

.preview-goods-total-price {
  display: inline-block;
  width: calc(100% - 234rpx);
  font-size: 26rpx;
  vertical-align: middle;
  color: #666;
  text-align: left;
  text-indent: 36rpx;
}

.bottom-nav form {
  float: right;
  width: 234rpx;
}

.bottom-nav button {
  float: right;
  width: 100%;
  font-size: 33rpx;
  border-radius: 0;
  color: #fff;
  background-color: #c81e27;
  line-height: inherit;
}

.icon-location, .icon-phone {
  font-size: 42rpx;
  vertical-align: sub;
  margin-right: 8px;
}

.price-count {
  color: #c81e27;
  font-size: 34rpx;
}

.use-balance-option {
  line-height: 32px;
  overflow: hidden;
}

switch {
  margin-right: -4px;
}

.benefit-method-wrap {
  text-align: right;
  color: #666;
}

.benefit-method-wrap .bargain-price {
  color: #c81e27;
  margin-top: 10rpx;
}

.group-buy {
  overflow: hidden;
  position: relative;
}

.group-buy ::after {
  content: '';
  background: -webkit-gradient(linear, 0 0, right 0, from(#c81e27), to(#ffc114));
  height: 120rpx;
  width: 120rpx;
  display: block;
  text-align: center;
  line-height: 120rpx;
  transform: rotate(45deg);
  position: absolute;
  left: -60rpx;
  top: -60rpx;
  z-index: 9;
}

.group-buy ::before {
  content: '拼团';
  color: #fff;
  width: 120rpx;
  display: block;
  font-size: 26rpx;
  position: absolute;
  left: -8rpx;
  top: -8rpx;
  z-index: 10;
  transform: rotate(-45deg);
}

