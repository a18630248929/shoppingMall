}

.pills-list label.select {
  position: relative;
  color: #fff;
  background-color: #c81e27;
}

.pills-list label.select:after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 12px;
  height: 12px;
}

.addToShoppingCart {
  background-color: #f5a623;
}

.buy-goods-directly.disabled, .addToShoppingCart.disabled {
  background-color: #888;
}

.page-dialog-wrap .minus, .page-dialog-wrap .plus {
  position: relative;
  display: inline-block;
  font-size: 16px;
  outline: 0 !important;
  text-indent: -9999px;
  overflow: hidden;
  vertical-align: middle;
  width: 25px;
  height: 25px;
  line-height: 25px;
  font-weight: normal;
  background-color: #f1f1f1;
  color: #878787;
  border-radius: 2px;
  border: none;
}

.page-dialog-wrap .minus.disabled, .page-dialog-wrap .plus.disabled {
  background-color: #f9f9f9;
  color: #cacaca;
}

.page-dialog-wrap .minus:before, .page-dialog-wrap .plus:before,
.page-dialog-wrap .plus:after {
  position: absolute;
  width: 8px;
  height: 2px;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #878787;
  bottom: 0;
  content: '';
}

.page-dialog-wrap .plus:after {
  width: 2px;
  height: 8px;
}

.page-dialog-wrap .minus.disabled:before,
.page-dialog-wrap .plus.disabled:before, .page-dialog-wrap .plus.disabled:after {
  background-color: #cacaca;
}

.page-dialog-wrap .page-dialog-close {
  display: block;
  width: 46.8rpx;
  height: 46.8rpx;
  border: 1px solid #67666f;
  color: #67666f;
  text-align: center;
  line-height: 46.8rpx;
  border-radius: 50%;
  font-size: 37.44rpx;
  top: 23.4rpx;
  right: 23.4rpx;
}

.page-dialog-wrap .quantity input {
  border: none;
  height: 25px;
  background-color: #f1f1f1;
  padding: 0;
  margin: 0 1px;
  border-radius: 0;
  width: 30px;
  min-height: 25px;
  line-height: 25px;
  font-size: 14px;
}

.page-dialog-wrap .confirm-goods {
  color: #fff;
  border-color: #c81e27;
  background-color: #c81e27;
  border-radius: 0;
  margin-top: 50rpx;
}

.page-dialog-wrap .gift-text {
  display: inline-block;
