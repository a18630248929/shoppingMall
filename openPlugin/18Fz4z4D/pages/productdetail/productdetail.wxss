/* 活动热度 */

.activity-heat {
  box-sizing: border-box;
  border: 1px solid #fffaf7;
  border-radius: 10rpx;
  padding: 40rpx 30rpx;
}

.activity-heat .activity-flow, .activity-heat .activity-member {
  position: relative;
  display: flex;
  color: #999;
  font-size: 22rpx;
  text-align: center;
}

.activity-heat .activity-flow {
  justify-content: space-between;
}

.activity-heat .activity-member {
  padding-top: 26rpx;
}

.activity-heat .flow-section {
  position: relative;
  flex: 1;
}

.activity-heat .flow-section:nth-child(1):after,
.activity-heat .flow-section:nth-child(2):after {
  position: absolute;
  top: 50%;
  margin-top: -21rpx;
  right: 0;
  content: '';
  height: 42rpx;
  width: 1rpx;
  background: rgba(153, 153, 153, 0.2);
}

.activity-heat .flow-section view:nth-child(1) {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.activity-heat .member-section {
  display: flex;
  align-items: center;
  text-align: left;
  color: #999;
  font-size: 22rpx;
}

.activity-heat .member-section:nth-child(2) {
  margin-left: 20rpx;
}

.activity-heat .member-image {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: -10rpx;
}

.activity-heat .member-section image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.activity-heat .member-section icon {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  background: #f1f1f1;
  color: #dbdbdb;
  width: 100%;
  height: 100%;
  border: 1px solid #eee;
  border-radius: 50%;
}

