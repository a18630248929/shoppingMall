  min-height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  width: 50rpx;
  text-align: center;
}

.minus:before, .plus:before, .plus:after {
  position: absolute;
  width: 8px;
  height: 2px;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #878787;
  bottom: 0;
  content: '';
}

.minus.disabled:before, .plus.disabled:before, .plus.disabled:after {
  background-color: #cacaca;
}

.plus:after {
  width: 2px;
  height: 8px;
}

.dialog-block-item .minus, .dialog-block-item  .plus {
  position: relative;
  display: inline-block;
  font-size: 16px;
  outline: 0 !important;
  text-indent: -9999px;
  overflow: hidden;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: normal;
  background-color: #f1f1f1;
  color: #878787;
  border-radius: 2px;
  border: none;
}

